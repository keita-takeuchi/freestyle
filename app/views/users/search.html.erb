<div class="search_body">
<h2 class="search_title">フリースタイラーを探す</h2>
  <%= form_tag('/users/search', method: :get) do %>
    <%= text_field_tag :search, "", placeholder: "ユーザー名で検索" %>
    <%= submit_tag "検索" %>
  <% end %>

<table class="search_table">
  <thead class="search_result">
    <tr>
      <th>User nickname</th>
      <th>User email</th>
      <th>User description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="search_table">
    <% @user.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>


