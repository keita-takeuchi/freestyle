<!DOCTYPE html>
<html>
<head>
  <title>Freestyle</title>
  <%= Gon::Base.render_data %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAf62_jSQyDrnwVzyThsntrN6Ov0CqeBaM"></script>
   <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
   <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  <%= csrf_meta_tags %>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous"> <!-- font awesomeのコード -->
</head>


<body>
<div class="header">
  <%= render 'layouts/header' %>
</div>

<div class="container">
  <div class="login">
    <% if user_signed_in? %>
      <div class="user_nav grid-6">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <div class="grid-6">
        <%= link_to "ログイン", new_user_session_path, class: 'post' %>
        <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
      </div>
    <% end %>
  </div>
<%= yield %>
</div>

</body>

<% if user_signed_in? %>
<div class="footer">

  <div class="home_menu">
    <%= link_to posts_path, class: "footer_icon" do %>
      <i class="fa fa-home fa-3x fa-color" aria-hidden="true"></i>
    <% end %>

    <%= link_to users_search_path, class: "footer_icon" do %>
      <i class="fa fa-search fa-3x fa-color" aria-hidden="true"></i>
    <% end %>

    <%= link_to new_post_path, class: "footer_icon" do %>
      <i class="fa fa-futbol-o fa-3x fa-color" aria-hidden="true"></i>
    <% end %>

    <%= link_to user_path(current_user), class: "footer_icon" do %>
     <i class="fa fa-user fa-3x fa-color" aria-hidden="true"></i>
    <% end %>


</div>

</div>
<% end %>

</html>
